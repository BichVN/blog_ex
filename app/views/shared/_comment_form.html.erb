<%= form_for [entry, @comment] do |f| %>
<%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Write a comment..." %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
 <%= f.submit "Comment", class: "btn btn-sm" %>
<% end %>
